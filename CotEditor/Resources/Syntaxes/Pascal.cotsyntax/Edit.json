{
  "comment" : {
    "blocks" : [
      {
        "begin" : "{",
        "end" : "}"
      },
      {
        "begin" : "(*",
        "end" : "*)"
      }
    ],
    "inlines" : [
      {
        "begin" : "//"
      }
    ]
  },
  "lexicalRules" : {
    "delimiterEscapeRule" : "none"
  },
  "indentation" : {
    "blockDelimiters" : [
      {
        "begin" : "begin",
        "end" : "end",
        "ignoreCase" : true
      },
      {
        "begin" : "repeat",
        "end" : "until",
        "ignoreCase" : true
      }
    ]
  }
}