[
  {
    "beginString" : "^([\\t ]*)(\\w+::\\w+)\\s*\\(([\\s\\w*&,\\[\\]]*)\\)",
    "description" : "constructor",
    "keyString" : "$1$2($3)"
  },
  {
    "beginString" : "^([\\t ]*)(\\w+::~\\w+)\\s*\\(\\)",
    "description" : "deconstructor",
    "keyString" : "$1$2()"
  },
  {
    "beginString" : "^([\\t ]*)(\\w[\\w\\s]*)\\s+(\\**\\w+)\\(([\\s\\w*&,\\[\\]]*)\\)[\\t ]*(?=\\{|//|$)",
    "description" : "function",
    "keyString" : "$1 $3($4)"
  },
  {
    "beginString" : "^([\\t ]*)(\\w[\\w\\s]*)\\s+(\\**\\w+::\\w+)\\(([\\s\\w*&,]*)\\)[\\t ]*(?=\\{|//|$)",
    "description" : "method",
    "keyString" : "$1 $3($4)"
  },
  {
    "beginString" : "^class[\\t ]+(\\w+)",
    "bold" : true,
    "description" : "class",
    "keyString" : "$1"
  },
  {
    "beginString" : "^enum[\\t ]+(\\w+)",
    "description" : "enum",
    "italic" : true,
    "keyString" : "enum $1"
  },
  {
    "beginString" : "^struct[\\t ]+(\\w+)",
    "description" : "struct",
    "italic" : true,
    "keyString" : "struct $1"
  },
  {
    "beginString" : "^typedef (enum|struct|union)\\s*\\{[^}]*\\}[\\\\t ]*(\\w+);",
    "description" : "typedef enum/struct/union",
    "italic" : true,
    "keyString" : "$1 $2"
  },
  {
    "beginString" : "^union[\\t ]+(\\w+)",
    "description" : "union",
    "italic" : true,
    "keyString" : "union $1"
  }
]