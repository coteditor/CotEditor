[
  {
    "pattern" : "^([\\t ]*)(sub)[ ]*([a-z][a-z0-9_]*)[^{].*\\{",
    "description" : "sub-routine",
    "ignoreCase" : true,
    "template" : "$1$2 $3 {}",
    "kind" : "function"
  },
  {
    "pattern" : "^[ ]*(\\@ISA)([^;]*);",
    "description" : "@ISA",
    "ignoreCase" : true,
    "template" : "$1 $2",
    "kind" : "value"
  },
  {
    "pattern" : "^[ ]*(package)[ ]*([a-z][a-z0-9_]*).*$",
    "description" : "package",
    "ignoreCase" : true,
    "template" : "$1 $2",
    "kind" : "container"
  }
]